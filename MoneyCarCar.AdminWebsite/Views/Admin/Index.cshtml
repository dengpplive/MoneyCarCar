    <script src="/Scripts/jquery.layout-latest.js"></script>
    <script src="/Scripts/json2.js"></script>

    <script src="/Scripts/easyui/jquery.js"></script>
    <script src="/Scripts/easyui/jquery.easyui.js"></script>
