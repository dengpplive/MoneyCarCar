    <style type="text/css">
        body, ol, ul, h1, h2, h3, h4, h5, h6, p, th, td, dl, dd, form, fieldset, legend, input, textarea, select {
            margin: 0;
            padding: 0;
        }

        body {
            font: 12px "宋体","Arial Narrow",HELVETICA;
            background: #fff;
            -webkit-text-size-adjust: 100%;
        }

        .table {
            width: 100%;
            margin: 0 auto;
            border: 1px dashed #c5c5c5;
            border-width: 1px 0 0 1px;
        }

            .table td {
                line-height: 20px;
                border: 1px dashed #c5c5c5;
                border-width: 0 1px 1px 0;
                color: #999;
                padding: 0 5px;
            }

                .table td > span {
                    display: block;
                    width: 95%;
                    text-align: right;
                    margin-right: 20px;
                    color: #333;
                    padding-left: 5px;
                }

        .top {
            width: 100%;
            height: 60px;
            background: #2d6492;
            position: relative;
            margin: 0 auto;
        }

        .top_logo {
            display: block;
            width: 211PX;
            height: 33px;
            background: url(../Content/Admin/images/top_logo.png) no-repeat;
            position: absolute;
            left: 20px;
            top: 20px;
        }

        .top_info {
            width: 200px;
            overflow: hidden;
            position: absolute;
            right: 20px;
            top: 20px;
        }

            .top_info li {
                list-style: none;
                float: left;
                width: 40%;
                text-align: center;
                margin: 0 5%;
            }

        .edit_pwd {
            background: #53bc45;
            color: #fff;
            border-radius: 2px;
            padding: 5px 10px;
            display: block;
            text-decoration: none;
        }

            .edit_pwd:hover {
                background: #37ac27;
                color: #fff;
                text-decoration: none;
            }

        .exit {
            background: #de4526;
            color: #fff;
            border-radius: 2px;
            padding: 5px 10px;
            display: block;
            text-decoration: none;
        }

            .exit:hover {
                background: #bc361b;
                color: #fff;
                text-decoration: none;
            }

        .main {
            width: 100%;
        }

        .table {
            width: 100%;
            margin: 0 auto;
            border: 1px solid #dadada;
            border-width: 1px 0 0 1px;
        }

            .table td {
                line-height: 20px;
                border: 1px solid #dadada;
                border-width: 0 1px 1px 0;
                color: #666;
                padding: 10px 5px;
                font-weight: 600;
                text-align: right;
            }

                .table td > span {
                    display: block;
                    width: 100%;
                    text-align: left;
                    color: #f00;
                }

        .green {
            font-style: normal;
            color: #0C3 !important;
            font-weight: 700;
        }

        .title_td {
            background: #f5f5f5;
        }
    </style>

    <link href="~/Content/Admin/css/default.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript">
            @*var _Menus = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model))*@
        //设置登录窗口
        function openPwd() {
            $('#w').window({
                title: '修改密码',
                width: 300,
                modal: true,
                shadow: true,
                closed: true,
                height: 200,
                resizable: false
            });
        }
        //关闭登录窗口
        function closePwd() {
            $('#w').window('close');
        }
        //修改密码
        function serverLogin() {
            var $oldPass = $('#txtOldPass');
            var $newpass = $('#txtNewPass');
            var $rePass = $('#txtRePass');
            if ($oldPass.val() == '') {
                msgShow('系统提示', '请输入原密码！', 'warning');
                return false;
            }
            if ($newpass.val() == '') {
                msgShow('系统提示', '请输入密码！', 'warning');
                return false;
            }
            if ($rePass.val() == '') {
                msgShow('系统提示', '请在一次输入密码！', 'warning');
                return false;
            }
            if ($newpass.val() != $rePass.val()) {
                msgShow('系统提示', '两次密码不一至！请重新输入', 'warning');
                return false;
            }
            var url = '@Url.Action("CurrPwdUpdate", "Account")';
            var data = 'opwd=' + $oldPass.val() + '&npwd=' + $newpass.val() + '&rpwd=' + $rePass.val() + '&v=' + Math.random();
            $.post(url, data, function (msg) {
                msg = JSON.parse(msg);
                if (msg.status == 1) {
                    msgShow('系统提示', '恭喜，密码修改成功！<br>您的新密码为：' + msg.message, 'info');
                    $newpass.val('');
                    $rePass.val('');
                    close();
                } else {
                    msgShow('系统提示', '修改失败：' + msg.message, 'info');
                }
            }, "text");

        }
        $(function () {
            showMask();
            $.parser.onComplete = function () {
                hideMask();
            };
            $.parser.parse();
            //初始化修改密码对话框
            openPwd();
            $('#editpass').click(function () {
                $('#w').window('open');
                $("#txtOldPass").focus();
            });
            //修改密码
            $('#btnEp').click(function () {
                serverLogin();
            })
            //取消修改
            $('#btnCancel').click(function () { closePwd(); })

            $('#loginOut').click(function () {
                $.messager.confirm('系统提示', '您确定要退出本次登录吗?', function (r) {
                    if (r) {
                        showMask();
                        location.href = '@Url.Action("Logont", "Admin")';
                        //跳转。。。
                    }
                });
            })
        });


    </script>
</head>
<body class="easyui-layout" id="bdody" style="overflow-y: hidden" scroll="no">
    <noscript>
        <div style=" position:absolute; z-index:100000; height:2046px;top:0px;left:0px; width:100%; background:white; text-

align:center;">
            <img src="images/noscript.gif" alt='抱歉，请开启脚本支持！' />
        </div>
    </noscript>
    <div region="north" split="false" scroll="no" style="height: 69px;  background: #2D6492;">
        @Html.Partial("Top")
    </div>

    <div region="south" split="false" style="height: 30px; background: #D2E0F2; ">
        @Html.Partial("Footer")
    </div>
    <div region="west" hide="true" split="false" title="导航菜单" style="width:180px;overflow-y:hidden" id="west">
        <div id="userInfo" class="easyui-panel" style="width:100%;height:80px;">
            登录账号:@ViewBag.curUser.UserName<br />
            姓名：@ViewBag.curUser.RealName
        </div>
        <div id="nav">
            <!--  导航内容 -->
        </div>
    </div>
    <div id="mainPanle" region="center" style="background: #eee; overflow-y:hidden">
        <div id="tabs" class="easyui-tabs" fit="true" border="false">
            @Html.Partial("FirstPage")
        </div>
    </div>
    <div region="east" title="其他" split="true" collapsed="true" style="width:180px;overflow:hidden;">

    </div>

    @*修改密码窗口*@
    @Html.Partial("UpdatePwd")
    @*选项卡右键菜单*@
    <div id="mm" class="easyui-menu" style="width:150px;">
        <div id="mm-tabupdate">刷新</div>
        <div class="menu-sep"></div>
        <div id="mm-tabclose">关闭</div>
        <div id="mm-tabcloseall">全部关闭</div>
        <div id="mm-tabcloseother">除此之外全部关闭</div>
        <div class="menu-sep"></div>
